{
  "compilerOptions": {
     "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
    "target": "esnext",
    "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "app/build",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "esModuleInterop": true,
     "strict": false ,
     "strictPropertyInitialization": false,
     "forceConsistentCasingInFileNames": true,
     "typeRoots": ["./src/@types"],  
     "skipLibCheck": true,
     "noImplicitAny": false,             
  },
}